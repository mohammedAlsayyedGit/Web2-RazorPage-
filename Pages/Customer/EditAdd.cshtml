@page "{Id=0}"
@model BindingRoute.Pages.Customer.EditAddModel
@{
    ViewData["Title"] = "Edit Customer";
}


<form method="post">
   <partial name="_CustomerPartial" model="Model.Customer" />
   <div class=" offset-2 col-sm-10 d-flex justify-content-between" >
       <button type="submit" class="btn btn-primary d-inline-block col-2">Save</button>
       <a asp-page="./Index" class="btn btn-warning d-inline-block ml-auto"> Back to Home</a>
   </div>
</form>

@section Scripts{
             @{  
                 await  Html.RenderPartialAsync("_ValidationScriptsPartial");
              }
}